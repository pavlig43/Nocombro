[
  // ============================================
  // Keybindings в стиле Android Studio / IntelliJ IDEA
  // ============================================

  // Навигация
  {
    "key": "ctrl+e",
    "command": "workbench.action.quickOpen"
  },
  {
    "key": "ctrl+shift+e",
    "command": "workbench.action.quickOpenNavigate"
  },
  {
    "key": "ctrl+shift+n",
    "command": "workbench.action.quickOpen",
    "when": "!inQuickOpen"
  },
  {
    "key": "ctrl+n",
    "command": "workbench.action.quickOpen",
    "when": "!inQuickOpen"
  },
  {
    "key": "ctrl+shift+alt+n",
    "command": "workbench.action.showAllSymbols"
  },
  {
    "key": "ctrl+shift+a",
    "command": "workbench.action.showCommands"
  },
  {
    "key": "ctrl+g",
    "command": "workbench.action.gotoLine"
  },
  {
    "key": "ctrl+b",
    "command": "editor.action.goToDeclaration"
  },
  {
    "key": "ctrl+alt+b",
    "command": "editor.action.goToImplementation"
  },
  {
    "key": "ctrl+shift+i",
    "command": "editor.action.previewDeclaration"
  },
  {
    "key": "ctrl+shift+left",
    "command": "workbench.action.navigateBack"
  },
  {
    "key": "ctrl+shift+right",
    "command": "workbench.action.navigateForward"
  },
  {
    "key": "alt+left",
    "command": "workbench.action.navigateBack"
  },
  {
    "key": "alt+right",
    "command": "workbench.action.navigateForward"
  },

  // Редактирование
  {
    "key": "ctrl+d",
    "command": "editor.action.duplicateSelection"
  },
  {
    "key": "ctrl+y",
    "command": "editor.action.deleteLines",
    "when": "textInputFocus && !editorReadonly"
  },
  {
    "key": "ctrl+shift+up",
    "command": "editor.action.moveLinesUpAction",
    "when": "textInputFocus && !editorReadonly"
  },
  {
    "key": "ctrl+shift+down",
    "command": "editor.action.moveLinesDownAction",
    "when": "textInputFocus && !editorReadonly"
  },
  {
    "key": "ctrl+alt+shift+up",
    "command": "editor.action.copyLinesUpAction",
    "when": "textInputFocus && !editorReadonly"
  },
  {
    "key": "ctrl+alt+shift+down",
    "command": "editor.action.copyLinesDownAction",
    "when": "textInputFocus && !editorReadonly"
  },
  {
    "key": "ctrl+w",
    "command": "editor.action.smartSelect.grow",
    "when": "textInputFocus"
  },
  {
    "key": "ctrl+shift+w",
    "command": "editor.action.smartSelect.shrink",
    "when": "textInputFocus"
  },
  {
    "key": "ctrl+/",
    "command": "editor.action.commentLine",
    "when": "textInputFocus && !editorReadonly"
  },
  {
    "key": "ctrl+shift+/",
    "command": "editor.action.blockComment",
    "when": "textInputFocus && !editorReadonly"
  },
  {
    "key": "ctrl+alt+l",
    "command": "editor.action.formatDocument",
    "when": "editorHasDocumentFormattingProvider && editorTextFocus && !editorReadonly"
  },
  {
    "key": "ctrl+space",
    "command": "editor.triggerSuggest",
    "when": "editorHasCompletionItemProvider && textInputFocus && !editorReadonly"
  },
  {
    "key": "ctrl+shift+space",
    "command": "editor.triggerParameterHints",
    "when": "editorHasSignatureHelpProvider && editorTextFocus"
  },
  {
    "key": "alt+enter",
    "command": "editor.action.quickFix",
    "when": "editorHasCodeActionsProvider && editorTextFocus && !editorReadonly"
  },
  {
    "key": "ctrl+alt+o",
    "command": "editor.action.organizeImports",
    "when": "editorTextFocus && !editorReadonly"
  },
  {
    "key": "ctrl+alt+i",
    "command": "editor.action.formatDocument",
    "when": "editorHasDocumentFormattingProvider && editorTextFocus && !editorReadonly"
  },

  // Поиск и замена
  {
    "key": "ctrl+shift+f",
    "command": "workbench.action.findInFiles"
  },
  {
    "key": "ctrl+r",
    "command": "editor.action.startFindReplaceAction"
  },
  {
    "key": "ctrl+shift+r",
    "command": "workbench.action.replaceInFiles"
  },
  {
    "key": "ctrl+f",
    "command": "actions.find"
  },

  // Refactoring
  {
    "key": "shift+f6",
    "command": "editor.action.rename",
    "when": "editorHasRenameProvider && editorTextFocus && !editorReadonly"
  },
  {
    "key": "ctrl+alt+m",
    "command": "editor.action.codeAction",
    "args": {
      "kind": "refactor.extract.function"
    }
  },
  {
    "key": "ctrl+alt+v",
    "command": "editor.action.codeAction",
    "args": {
      "kind": "refactor.extract.variable"
    }
  },

  // Вкладки и окна
  {
    "key": "ctrl+shift+f4",
    "command": "workbench.action.closeActiveEditor"
  },
  {
    "key": "ctrl+f4",
    "command": "workbench.action.closeActiveEditor"
  },
  {
    "key": "ctrl+tab",
    "command": "workbench.action.quickOpenNavigate",
    "args": {
      "to": "previous"
    }
  },
  {
    "key": "ctrl+shift+tab",
    "command": "workbench.action.quickOpenNavigate",
    "args": {
      "to": "next"
    }
  },
  {
    "key": "ctrl+shift+[",
    "command": "workbench.action.previousEditor"
  },
  {
    "key": "ctrl+shift+]",
    "command": "workbench.action.nextEditor"
  },
  {
    "key": "alt+0",
    "command": "workbench.actions.view.problems"
  },
  {
    "key": "alt+1",
    "command": "workbench.view.explorer"
  },
  {
    "key": "alt+7",
    "command": "workbench.action.showAllSymbols"
  },
  {
    "key": "ctrl+shift+alt+s",
    "command": "workbench.action.tasks.configureTaskRunner"
  },

  // Запуск и отладка
  {
    "key": "shift+f10",
    "command": "workbench.action.tasks.runTask"
  },
  {
    "key": "shift+f9",
    "command": "workbench.action.debug.start"
  },
  {
    "key": "ctrl+f8",
    "command": "editor.debug.action.toggleBreakpoint"
  },
  {
    "key": "f8",
    "command": "workbench.action.debug.stepOver",
    "when": "inDebugMode"
  },
  {
    "key": "f7",
    "command": "workbench.action.debug.stepInto",
    "when": "inDebugMode"
  },
  {
    "key": "shift+f8",
    "command": "workbench.action.debug.stepOut",
    "when": "inDebugMode"
  },
  {
    "key": "f9",
    "command": "workbench.action.debug.continue",
    "when": "inDebugMode"
  },

  // Bookmarks (если установлен плагин)
  {
    "key": "ctrl+shift+digit11",
    "command": "bookmarks.toggle",
    "when": "editorTextFocus"
  },
  {
    "key": "ctrl+digit11",
    "command": "bookmarks.jumpToNext",
    "when": "editorTextFocus"
  },

  // Терминал
  {
    "key": "alt+f12",
    "command": "workbench.action.terminal.toggle"
  },
  {
    "key": "ctrl+shift+f10",
    "command": "workbench.action.terminal.new"
  },

  // Misc
  {
    "key": "ctrl+shift+k",
    "command": "workbench.action.terminal.clear"
  },
  {
    "key": "ctrl+s",
    "command": "workbench.action.files.save",
    "when": "!editorReadonly"
  },
  {
    "key": "ctrl+shift+s",
    "command": "workbench.action.files.saveAll"
  },
  {
    "key": "ctrl+z",
    "command": "undo",
    "when": "editorTextFocus && !editorReadonly"
  },
  {
    "key": "ctrl+shift+z",
    "command": "redo",
    "when": "editorTextFocus && !editorReadonly"
  },
  {
    "key": "ctrl+x",
    "command": "editor.action.clipboardCutAction",
    "when": "editorTextFocus && !editorReadonly"
  },
  {
    "key": "ctrl+c",
    "command": "editor.action.clipboardCopyAction",
    "when": "editorTextFocus"
  },
  {
    "key": "ctrl+v",
    "command": "editor.action.clipboardPasteAction",
    "when": "editorTextFocus && !editorReadonly"
  },
  {
    "key": "ctrl+a",
    "command": "editor.action.selectAll",
    "when": "editorTextFocus"
  }
]
