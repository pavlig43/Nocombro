{
  // ============================================
  // VS Code Settings для Android/Kotlin разработки
  // Стиль: Android Studio (Darcula)
  // ============================================

  // --- Тема оформления ---
  "workbench.colorTheme": "Darcula Theme from IntelliJ",
  "workbench.iconTheme": "icons",
  "workbench.preferredDarkColorTheme": "Darcula Theme from IntelliJ",

  // --- Шрифты ---
  "editor.fontFamily": "'JetBrains Mono', 'Consolas', 'Courier New', monospace",
  "editor.fontSize": 14,
  "editor.lineHeight": 1.4,
  "editor.fontWeight": "400",
  "editor.fontLigatures": true,

  // --- Редактор кода ---
  "editor.tabSize": 4,
  "editor.insertSpaces": true,
  "editor.detectIndentation": false,
  "editor.trimAutoWhitespace": true,
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.formatOnType": true,
  "editor.suggestSelection": "first",
  "editor.wordBasedSuggestions": "matchingDocuments",
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit",
    "source.organizeImports": "explicit"
  },
  "editor.minimap.enabled": false,
  "editor.scrollBeyondLastLine": true,
  "editor.cursorBlinking": "smooth",
  "editor.cursorSmoothCaretAnimation": "on",

  // --- Kotlin ---
  "kotlin.languageServer.enabled": true,
  "kotlin.completion.snippets.enabled": true,
  "kotlin.debugAdapter.enabled": true,
  "kotlin.externalSources.useGradle": true,
  "kotlin.compiler.jvm.target": "17",

  // --- Файлы и проводник ---
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.patterns": {
    "*.gradle.kts": "*.gradle.kts",
    "build.gradle.kts": "*.gradle.kts",
    "settings.gradle.kts": "*.gradle.kts",
    "*.kt": "$(capture).${ext:upcase}",
    "*.xml": "$(capture).layout.xml"
  },
  "explorer.sortOrder": "default",
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 1000,
  "files.exclude": {
    "**/.git": true,
    "**/.DS_Store": true,
    "**/build": true,
    "**/.gradle": true,
    "**/idea": true
  },
  "files.watcherExclude": {
    "**/build/**": true,
    "**/.gradle/**": true
  },

  // --- Git ---
  "git.enabled": true,
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.decorations.enabled": true,
  "git.enableSmartCommit": true,
  "git.postCommitCommand": "none",

  // --- Терминал ---
  "terminal.integrated.fontFamily": "'JetBrains Mono', 'Consolas', monospace",
  "terminal.integrated.fontSize": 13,
  "terminal.integrated.shell.windows": "powershell.exe",

  // --- Emmet ---
  "emmet.triggerExpansionOnTab": true,
  "emmet.includeLanguages": {
    "kotlin": "html"
  },

  // --- Search ---
  "search.smartCase": true,
  "search.useGlobalIgnoreFiles": true,
  "search.useIgnoreFiles": true,

  // --- Diff редактор ---
  "diffEditor.ignoreTrimWhitespace": false,
  "diffEditor.renderSideBySide": true,

  // --- Breadcrumbs ---
  "editor.breadcrumbs.enabled": true,
  "editor.breadcrumbs.filePath": "on",

  // --- Line numbers ---
  "editor.lineNumbers": "on",
  "editor.renderLineHighlight": "all",

  // --- Gutter ---
  "editor.gutterLayout": "dense",

  // --- Bracket pair colorization ---
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": true,
  "editor.guides.indentation": true,
  "editor.guides.highlightActiveIndentation": true,

  // --- Whitespace ---
  "editor.renderWhitespace": "boundary",
  "editor.renderControlCharacters": false,

  // --- Folding ---
  "editor.foldingStrategy": "indentation",
  "editor.showFoldingControls": "always",

  // --- Inlay hints ---
  "editor.inlayHints.enabled": "on",

  // --- Проблемы ---
  "problems.visibility": {
    "currentEditor": true
  },

  // --- Status bar ---
  "workbench.statusBar.visible": true,

  // --- Activity bar ---
  "workbench.activityBar.visible": true,

  // --- Panel ---
  "workbench.panel.defaultLocation": "bottom",

  // --- Zoom ---
  "window.zoomLevel": 0
}
